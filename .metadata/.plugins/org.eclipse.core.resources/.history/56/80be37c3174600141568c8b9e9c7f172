package twgitter.gui;

import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.layout.VBox;
import javafx.stage.Stage;

public class MessageBoxTest extends Application {
	public static void main(String[] args) throws Exception{
	    Application.launch(args);
	  }
	public static void main() throws Exception{
		String[] args = {""};
	    Application.launch(args);
	  }

	@Override
	public void start(Stage stage) throws InterruptedException {
		VBox message = MessageBox.makeMessageBox(stage.getScene());
		Scene scene = new Scene(message);

		//vbox.minHeightProperty().bind(scene.heightProperty());
		//vbox.minWidthProperty().setValue(300);
		//vbox.maxWidthProperty().setValue(300);
		//message.minHeightProperty().bind(scene.heightProperty());
		//message.minWidthProperty().setValue(300);
		//message.maxWidthProperty().setValue(300);

		//ScenicView.show(scene);

		// Stageの設定
		stage.setScene(scene);
		stage.setTitle("Twgitter - MessageBoxTesting...");
		stage.setWidth(300);
		//stage.setHeight(180);
		stage.show();

		MessageBox.setLabelMinHeight(MessageBox.getLabel("userScreenName"),MessageBox.getLabel("userScreenName").heightProperty().get());
		MessageBox.setLabelMinHeight(MessageBox.getLabel("userName"),MessageBox.getLabel("userName").heightProperty().get());
		MessageBox.setLabelMinHeight(MessageBox.getLabel("text"),MessageBox.getLabel("text").heightProperty().get());
	}

	@Override
	public void stop()
	{

	}
}
