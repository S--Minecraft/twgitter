package twgitter.IRC;


public class GetMessages {
	public static void getMessages(String server,String password,String Nickname,String UserName,String RealName,boolean Ssl){
		int ssl;
		if(Ssl)
		{
			ssl = 10;
		}else{
			ssl = 9;
		}

		String[] args = new String[ssl];

		if(Ssl)
		{
			args[0] = "-server";
			args[1] = server;
			args[2] = "-pass";
			args[3] = password;
			args[4] = "-nick";
			args[5] = Nickname;
			args[6] = "-user";
			args[7] = UserName;
			args[8] = "-name";
			args[9] = RealName;
			args[10] = "-ssl";
		}else{
			args[0] = "-server";
			args[1] = server;
			args[2] = "-pass";
			args[3] = password;
			args[4] = "-nick";
			args[5] = Nickname;
			args[6] = "-user";
			args[7] = UserName;
			args[8] = "-name";
			args[9] = RealName;
		}

		IRC.main(args);
	}
}
