import twgitter.appNet.StreamGetter;
import twgitter.gitter.Streaming;
import twgitter.twitter.UserStream;


public class TestThead extends Thread {
	public void run() {  //(2)スレッド実行コードをrunメソッドに記載
	    for(int i = 1; i <= 10; i++) {  //(3)
	      System.out.println(getName() + ":" + i);
	      try {
	        sleep(1000);
	      } catch (InterruptedException e) {
	      }
	    }
	  }

	  public static void main(String[] args) throws Exception{
	    //(4)クラスExThread1のオブジェクトを生成
		StreamGetter.getStream();
		Streaming.gitterStreaming("S--Minecraft/twgitter");
		UserStream.twitterUserStream();
	  }
}
