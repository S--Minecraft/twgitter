package twgitter;

import java.lang.annotation.Target;
import java.util.List;

import twitter4j.Query;
import twitter4j.QueryResult;
import twitter4j.Twitter;
import twitter4j.TwitterBase;
import twitter4j.TwitterException;
import twitter4j.TwitterFactory;

public class Samlple1 {
	public static void main(String[] args) {
		Twitter twitter = new TwitterFactory().getInstance();
        try {
         int i = 1 ;
         int end_flg = 0;
         while(end_flg == 0)
         {
             Query q = new Query("JARL_ARESC");
             q.setSinceId(i);
             QueryResult result = twitter.search(q);
             List<Target> tweets = result.getTweets();
             for (Target tweet : tweets) {
            	 System.out.println("<small>id:"+((TwitterBase) tweet).getId() + " time:"
            	+ ((Object) tweet).getCreatedAt() + "</small><BR><B>"
            	+ ((Object) tweet).getText()+"</B><BR><HR><BR>");
            	 if ( ((TwitterBase) tweet).getId() < 47572000125890560L)
            	 {
            		 end_flg = 1;
            		 break;
            	 }
             }
             i++;
         }
         System.exit(0);
        } catch (TwitterException te) {
            te.printStackTrace();
            System.out.println("Failed to search tweets: " + te.getMessage());
            System.exit(-1);
        }
    }
}
