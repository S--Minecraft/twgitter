package twgitter;

import java.util.List;

import twgitter.slack.GetChannelHistory;
import twgitter.slack.GetUsers;
import twgitter.slack.Message;
import twgitter.slack.User;

public class Test {
	public static void main(String[] args) throws Exception {
		/*
		StreamGetter appNet = new StreamGetter();
		appNet.run();
		*/
		/*
		Streaming gitter = new Streaming("S--Minecraft/twgitter");
		gitter.run();
