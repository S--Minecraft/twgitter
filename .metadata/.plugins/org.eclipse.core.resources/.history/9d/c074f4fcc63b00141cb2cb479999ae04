package twgitter.croudia;

import twgitter.croudia.config.Config;
import twgitter.get.Command;

public class GetOAuth {
	public static void main(String[] args) throws Exception {
		String[] jsonString = Command.execCommand("curl -k -F \"grant_type=authorization_code\" -F \"client_id=" + Config.ConsumerKey + "\" -F \"client_secret=" + Config.ConsumerSecret + "\" -F \"code=aa0213957409081293d28006779fb1b4d6ff5b81b65d241fffeb935f45181af6\" https://api.croudia.com/oauth/token");

		for(int i=0;i<jsonString.length;i++)
		{
			System.out.println(jsonString[0]);
		}
	}
}
