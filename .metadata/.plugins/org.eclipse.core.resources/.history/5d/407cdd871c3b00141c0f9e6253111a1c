package twgitter.IRC;


public class GetMessages {
	public static void getMessages(String server,String password,String Nickname,String UserName,String RealName,boolean Ssl){
		int ssl;
		if(Ssl)
		{
			ssl = 9;
		}else{
			ssl = 8;
		}

		String[] args = new String[ssl];

		if(Ssl)
		{
			args[0] = "-server";
			args[1] = server;
			args[2] = "-pass";
			args[3] = password;
			args[4] = "-nick";
			args[5] = Nickname;
			args[6] = "-user";
			args[7] = UserName;
			args[8] = "-name";
			args[9] = RealName;
			args[10] = "-ssl";
		}else{
			args[0] = "-server";
			args[1] = server;
			args[2] = "-pass";
			args[3] = password;
			args[4] = "-nick";
			args[5] = Nickname;
			args[6] = "-user";
			args[7] = UserName;
			args[8] = "-name";
			args[9] = RealName;
		}

		IRC.main(args);
	}

	public static void getMessages(String server,String password,String Nickname,String UserName,String RealName){
		getMessages(server,password,Nickname,UserName,RealName,false);
	}

	public static void getMessages(String server,String Nickname,String UserName,String RealName,boolean Ssl){
		int ssl;
		if(Ssl)
		{
			ssl = 9;
		}else{
			ssl = 8;
		}

		String[] args = new String[ssl];

		if(Ssl)
		{
			args[0] = "-server";
			args[1] = server;
			args[2] = "-nick";
			args[3] = Nickname;
			args[4] = "-user";
			args[5] = UserName;
			args[6] = "-name";
			args[7] = RealName;
			args[8] = "-ssl";
		}else{
			args[0] = "-server";
			args[1] = server;
			args[2] = "-nick";
			args[3] = Nickname;
			args[4] = "-user";
			args[5] = UserName;
			args[6] = "-name";
			args[7] = RealName;
		}

		IRC.main(args);
	}

	public static void getMessages(String server,String Nickname,String UserName,String RealName){
		getMessages(server,Nickname,UserName,RealName,false);
	}

	public static void getMessages(String server,String Nickname,boolean Ssl){
		int ssl;
		if(Ssl)
		{
			ssl = 5;
		}else{
			ssl = 4;
		}

		String[] args = new String[ssl];

		if(Ssl)
		{
			args[0] = "-server";
			args[1] = server;
			args[2] = "-nick";
			args[3] = Nickname;
			args[4] = "-ssl";
		}else{
			args[0] = "-server";
			args[1] = server;
			args[2] = "-nick";
			args[3] = Nickname;
		}

		IRC.main(args);
	}

	public static void getMessages(String server,String Nickname){
		getMessages(server,Nickname,false);
	}
}
